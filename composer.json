{
    "name": "gmostafa/php-graphql-client",
    "description": "GraphQL client and query builder.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "graphql",
        "graph-ql",
        "client",
        "php",
        "query-builder",
        "query",
        "builder"
    ],
    "authors": [
        {
            "name": "Mostafa Ghoneimy",
            "email": "emostafagh@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "GraphQL\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GraphQL\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.3 || ^8.0",
        "ext-json": "*",
        "psr/http-message": "^1.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "php-http/discovery": "^1.6",
        "psr/http-client-implementation": "^1.0",
        "psr/http-factory-implementation": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "codacy/coverage": "^1.4",
        "guzzlehttp/psr7": "^1.0",
        "http-interop/http-factory-guzzle": "^1.0",
        "php-http/mock-client": "dev-upgrade-version-2"
    },
    "scripts": {
        "test": "phpunit tests/ --whitelist src/ --coverage-clover build/coverage/xml"
    },
    "suggest": {
        "gmostafa/php-graphql-oqm": "To have object-to-query mapping support"
    }
}
